/* Ler 3 numeros fraccionarios do teclado
e informar se o primeiro eh maior do que
a soma dos dois ultimos */

import java.util.Scanner;
  public class Exercicio10{
    public static void main(String[]args){

    Scanner s = new Scanner (System.in);

    float num1, num2, num3, soma = 0;

    System.out.println("Introduza o 1o numero : ");
    num1 = s.nextFloat();

    System.out.println("Introduza o 2o numero : ");
    num2 = s.nextFloat();

    System.out.println("Introduza o 3o numero : ");
    num3 = s.nextFloat();

    soma = num2 + num3;

    if(num1 > soma){
      System.out.println(num1+" > "+soma);
    }else{
      System.out.println(num1+" < "+soma);
    }
  }
}


